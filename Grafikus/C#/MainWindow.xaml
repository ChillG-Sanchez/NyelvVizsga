<Window x:Class="Nyelvvizsga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nyelvvizsga Program" Height="450" Width="600">
	<Grid>
		<Label Content="Év (2009-2017):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
		<TextBox x:Name="txtEv" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Width="100"/>

		<Button Content="Legnépszerűbb Nyelvek" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,50,0,0" Click="ShowTopLanguages"/>
		<Button Content="Legnagyobb Sikertelenségi Arány" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,100,0,0" Click="ShowHighestFailureRate"/>
		<Button Content="Nyelvek Vizsgázó Nélkül" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,150,0,0" Click="ShowNoExams"/>
		<Button Content="Mentés" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,200,0,0" Click="SaveResults"/>

		<TextBlock x:Name="txtResult" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,10,0,0" Width="300" Height="200" TextWrapping="Wrap"/>
	</Grid>
</Window>
